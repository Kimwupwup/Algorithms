{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++ compile",
            "command": "g++",
            "options": {
                "cd": "${fileDirname}"
            },
            "args": [
                "-o",
                "${fileBasenameNoExtension}",
                "${file}"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },

        {
            "label": "cpp exec",
            "command": "./${fileBasenameNoExtension}",
            "options": {
                "cd": "${fileDirname}"
            },
            "group":{
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}